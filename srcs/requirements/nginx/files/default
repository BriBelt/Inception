server 
{

# Sets the address and port or path for a UNIX-domain socket on which the server will
# accept requests.

    listen 443 ssl;
    listen [::]:443 ssl;

# Sets the name of a virtual server
    server_name bbeltran.42.fr;

# Assigning the previously (Dockerfile) created key and certificate to our configuration.
	ssl_protocols TLSv1.2 TLSv1.3;
	ssl_certificate /etc/ssl/certs/rootCert.crt;
	ssl_certificate_key /etc/ssl/private/rootKey.key;

	add_header X-Frame-Options DENY;
	add_header X-Content-Type-Options nosniff;
	add_header X-XSS-Protection "1; mode=block";

    root /var/www/html/;

#    index index.html index.htm;
    location / {
		root /var/www/nginx;
		index index.php index.html index.htm;
		}
    location ~ \.php$ {
		include snippets/fastcgi-php.conf;
       		fastcgi_pass wordpress:9000;
        	#fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        	include fastcgi_params;
		}
}
